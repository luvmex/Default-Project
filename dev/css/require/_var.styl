
//color platte
$black = rgb(0,0,0)
$grey = rgb(140,140,140)
$lightgrey = rgb(180,180,180)
$darkgrey = rgb(110,110,110)
$black = rgb(0,0,0)
$deepgrey = rgb(50,50,50)
$smoggrey = rgb(240,240,240)
$whitegrey = rgb(250,250,250)
$white = rgb(255,255,255)
$link = rgb(100,130,220)


//Section
vCenter()
	top 50%
	transform translateY(-50%)
	
wordBreak()
	word-break break-all
	word-wrap break-word
	hyphens auto

//font
topTitle()
	display: block
	font-size 120px
	line-height 130px
	font-weight 100
	letter-spacing 5px
	color $black
	font-family 'core-c', sans-serif

topContent()
	display: block
	font-size 20px
	line-height 24px
	font-weight 200
	letter-spacing 1px
	color $darkgrey
	font-family 'core-c', sans-serif

Title()
	font-size 36px
	line-height 40px

subTitle()
	font-size 24px
	font-weight 300
	letter-spacing 1px
	line-height 30px
	color $black

Content()
	font-size 16px
	line-height 20px
	letter-spacing 1px
	font-weight 300
	color $grey

Caption()
	font-size 15px
	font-weight 400
	letter-spacing 1px
	line-height 20px
	color $grey

Link()
	font-size 14px
	font-weight 400
	letter-spacing 0px
	line-height 20px
	padding 5px 0
	color $link
	cursor pointer
	&:hover
		text-decoration underline

